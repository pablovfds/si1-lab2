# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                             controllers.Application.index()

# Create page ad
GET         /criaranuncio                 controllers.Application.criarAnuncio()
POST        /criaranuncio                 controllers.Application.novoAnuncio()

# Page list of ads
GET         /listadeanuncios              controllers.Application.listaDeAnuncios()
POST        /listadeanuncios/:item        controllers.Application.pesquisaAnuncios(item: String)

# See page ad
GET         /veranuncio/:id               controllers.Application.verAnuncio(id: Long)
POST        /veranuncio/:id/delete        controllers.Application.removerAnuncio(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                 controllers.Assets.at(path="/public", file)
